{
  "name": "promptopia-nextjs13",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install", 
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write .",
      "eslint . --fix"
    ], 
    "components/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write .",
      "eslint . --fix"
    ],
    "models/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write .",
      "eslint . --fix"
    ],
    "util/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write .",
      "eslint . --fix"
    ]
  },
  "dependencies": {
    "@types/node": "20.1.4",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "bcrypt": "^5.1.0",
    "eslint": "8.40.0",
    "eslint-config-next": "13.4.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "lint-staged": "^13.2.2",
    "mongodb": "^5.5.0",
    "mongoose": "^7.1.1",
    "next": "13.4.2",
    "next-auth": "^4.22.1",
    "postcss": "8.4.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "2.8.8"
  }
}
